{% extends '@Naidusvoe/index.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-offset-3 col-xs-6">
                <form class="form-horizontal" action="{{ path('naidusvoe_signup_action') }}" method="post">
                    <div class="page-header">
                        <h3 class="text-center">Реєстрація</h3>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <label class="form-control-static" for="sign_user_login">[[ 'LABEL_LOGIN' | translate ]]</label>
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon"></div>
                            <input type="text" name="username" id="sign_user_login" class="form-control">
                        </div>

                        <div class="input-group">
                            <label class="form-control-static" for="sign_user_mail">[[ 'LABEL_EMAIL' | translate ]]</label>
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon"></div>
                            <input type="email" name="email" id="sign_user_mail" class="form-control">
                        </div>

                        <div class="input-group">
                            <label class="form-control-static" for="sign_user_pass">[[ 'LABEL_PASS' | translate ]]</label>
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon"></div>
                            <input type="password" name="password" id="sign_user_pass" class="form-control">
                        </div>

                        <div class="input-group">
                            <label class="form-control-static" for="sign_user_pass_repeat">[[ 'LABEL_RPASS' | translate ]]</label>
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon"></div>
                            <input type="password" id="sign_user_pass_repeat" class="form-control">
                        </div>

                        <hr/>

                        <div class="btn-group">
                            <button type="submit" class="form-control btn btn-default btn-success btn-">[[ 'BUTTON_SIGNUP' | translate ]]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}