{% extends '@Naidusvoe/layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h2 class="page-header text-center text-primary" style="font-size: 30px"> Логин </h2>
                <form role="form" action="{{ path('naidusvoe_login_check') }}" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Введите логин или email" name="_username" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Введите пароль" name="_password">
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.message }}
                        </div>
                    {% endif %}

                    <div class="form-footer">
                        <input type="hidden" name="_target_path" value="/" />
                        <button type="submit" class="btn btn-success btn-submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}